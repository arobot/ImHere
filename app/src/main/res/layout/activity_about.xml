<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <me.wluo.imhere.widget.MainTextView
        android:id="@+id/about_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="start"
        android:lineSpacingMultiplier="1.5"
        android:textSize="18sp"
        android:textColor="@color/textColorPrimary"
        android:text="设计：Arobot\n开发：Arobot\nLogo：Akoo\n\n\n\n\n" />

    <me.wluo.imhere.widget.MainTextView
        android:id="@+id/about_url"
        android:layout_below="@+id/about_intro"
        android:layout_width="wrap_content"
        android:autoLink="web"
        android:text="个人主页：http://wluo.me"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />
</RelativeLayout>